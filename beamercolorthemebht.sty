% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

% Colors from https://www.bht-berlin.de/fileadmin/oe/pressestelle/dokumente/BHT-Styleguide.pdf
\definecolor{bhtgray}{RGB}{85, 85, 85}
\definecolor{bhtyellow}{RGB}{255, 201, 0}
\definecolor{bhtred}{RGB}{234, 59, 7}
\definecolor{bhtpetrol}{RGB}{0, 160, 170}
\definecolor{bhtblue}{RGB}{0, 66, 130}

% Extra colors
\definecolor{lightgray}{RGB}{238, 238, 238}
\definecolor{bhtlightyellow}{RGB}{255, 250, 229}
\definecolor{bhtlightred}{RGB}{254, 235, 229}
\definecolor{bhtlightpetrol}{RGB}{221, 253, 255}
\definecolor{bhtlightblue}{RGB}{217, 236, 255}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=bhtblue}

% Headline
\setbeamercolor{headline}{fg=black,bg=lightgray}

% Block
\setbeamercolor{block title}{fg=bhtblue,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=bhtblue,bg=bhtlightred}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=bhtlightred}

% Example Block
\setbeamercolor{block example title}{fg=bhtblue,bg=lightgray}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=lightgray}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=bhtblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
